<h1>Edit Song</h1>

<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
    <ul>
    <% @song.errors.full_messages.each do |message| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<br>

<%= form_for @song do |f| %>

  <%= f.label :title, 'Song Title' %>
  <%= f.text_field :title %>

  <br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <br>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <br>

  <%= f.label :released %>
  <%= f.check_box :released %>

  <br>

  <%= f.label :release_year %>
  <%= f.number_field :release_year %>

  <br>

  <%= f.submit %>
<% end %>

<%= link_to "delete", song_path(@song), :method => :delete %>
